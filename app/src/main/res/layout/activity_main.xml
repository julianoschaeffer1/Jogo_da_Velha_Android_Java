<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jogador: 0"
         android:textSize="24sp"
        android:layout_marginBottom="10dp"
        android:id="@+id/TextViewPontuacaoJogador"

             />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MÃ¡quina: 0"
        android:textSize="24sp"
        android:layout_marginBottom="20dp"
        android:id="@+id/TextViewPontuacaoMaquina"

        />

    <GridLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_marginBottom="20dp">

        <Button android:id="@+id/botao00" style="@style/EstiloBotao"/>
        <Button android:id="@+id/botao01" style="@style/EstiloBotao"/>
        <Button android:id="@+id/botao02" style="@style/EstiloBotao"/>
        <Button android:id="@+id/botao03" style="@style/EstiloBotao"/>
        <Button android:id="@+id/botao04" style="@style/EstiloBotao"/>
        <Button android:id="@+id/botao05" style="@style/EstiloBotao"/>
        <Button android:id="@+id/botao06" style="@style/EstiloBotao"/>
        <Button android:id="@+id/botao07" style="@style/EstiloBotao"/>
        <Button android:id="@+id/botao08" style="@style/EstiloBotao"/>


    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/resultado"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"

/>

    <Button
        android:id="@+id/BotaoReiniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:enabled="false"
        android:onClick="ReiniciarJogo"
        android:text="Reiniciar Jogo"
        android:textSize="20sp" />
</LinearLayout>